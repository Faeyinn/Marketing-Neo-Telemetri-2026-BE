generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id             String   @id @default(uuid())
  name           String
  slug           String   @unique
  description    String
  photo          String?
  techStack      String[]
  linkProject    String?
  linkRepo       String?
  category       String[]
  completionDate DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
